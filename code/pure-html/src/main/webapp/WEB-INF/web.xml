<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaeehttp://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" version="4.0">
	<display-name>Bank_Web_App</display-name>

	<context-param>
		<param-name>dbUrl</param-name>
		<param-value>jdbc:mysql://localhost:3306/tiw_db?serverTimezone=UTC</param-value>
	</context-param>
	<context-param>
		<param-name>dbUser</param-name>
		<param-value>admin</param-value>
	</context-param>
	<context-param>
		<param-name>dbPassword</param-name>
		<param-value>password</param-value>
	</context-param>
	<context-param>
		<param-name>dbDriver</param-name>
		<param-value>com.mysql.cj.jdbc.Driver</param-value>
	</context-param>

	<filter>
		<filter-name>LoginChecker</filter-name>
		<filter-class>it.polimi.tiw.filters.LoginChecker</filter-class>
	</filter>
	<filter>
		<filter-name>AlreadyLoggedInChecker</filter-name>
		<filter-class>it.polimi.tiw.filters.AlreadyLoggedInChecker</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>LoginChecker</filter-name>
		<url-pattern>/home</url-pattern>
		<url-pattern>/account</url-pattern>
		<url-pattern>/add-contact</url-pattern>
		<url-pattern>/logout</url-pattern>
		<url-pattern>/make-transaction</url-pattern>
		<url-pattern>/profile</url-pattern>
		<url-pattern>/transaction-outcome</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>AlreadyLoggedInChecker</filter-name>
		<url-pattern>/login</url-pattern>
		<url-pattern>/registration</url-pattern>
	</filter-mapping>

	<error-page>
		<location>/error</location>
	</error-page>

	<welcome-file-list>
		<welcome-file>login</welcome-file>
	</welcome-file-list>
</web-app>